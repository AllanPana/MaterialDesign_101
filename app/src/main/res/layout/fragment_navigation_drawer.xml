<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/highLightColor"
    tools:context="com.materialdesign.pana.allan.materialdesign_101.fragments.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/ll_containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:src="@drawable/myloveofmylife"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleViewInNavDRawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_containerLayout">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
